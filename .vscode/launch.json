    "version": "0.2.0",
    "configurations": [
      {
        "name": "Debug",
        "type": "coreclr",
        "request": "launch",
        "program": "pwsh",
        "console": "externalTerminal",
        "cwd": "${workspaceFolder}",
        "args": [
          "-ExecutionPolicy",
          "RemoteSigned",
          "-NoExit",
          "-NoLogo",
          "-NoProfile",
          "-File",
          "${workspaceFolder}/scripts/Invoke-Debug.ps1",
          "-Configuration",
          "Debug"
        ]
      }
    ]
}
