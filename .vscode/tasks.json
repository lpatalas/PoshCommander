{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build (Debug)",
            "command": "pwsh",
            "type": "shell",
            "args": [
              "-ExecutionPolicy",
              "RemoteSigned",
              "-NoLogo",
              "-NoProfile",
              "-File",
              "${workspaceFolder}/scripts/helpers/BuildSolution.ps1",
              "-Configuration",
              "Debug"
            ],
            "group": "build",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$msCompile"
        }
    ]
}
