{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "shell",
            "windows": {
                "options": {
                    "shell": {
                        "executable": "cmd.exe",
                        "args": [
                            "/c"
                        ]
                    }
                }
            },
            "args": [
                "test",
                "--nologo",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary",
                "${workspaceFolder}/src/PoshCommander.sln"
            ],
            "presentation": {
                "clear": true,
                "reveal": "always"
            },
            "problemMatcher": "$msCompile",
            "group": {
              "kind": "build",
              "isDefault": true
            }
        }
    ]
}
